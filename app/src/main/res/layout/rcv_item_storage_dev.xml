<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_item_storage_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_rcv_item_storage_dev_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@drawable/ic_settings_black"
        android:contentDescription="@string/content_description" />

    <TextView
        android:id="@+id/txt_storage_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_rcv_item_storage_dev_icon"
        app:layout_constraintTop_toTopOf="@+id/img_rcv_item_storage_dev_icon"
        app:layout_constraintBottom_toBottomOf="@id/img_rcv_item_storage_dev_icon"
        tools:text="Internal Storage"/>

</androidx.constraintlayout.widget.ConstraintLayout>