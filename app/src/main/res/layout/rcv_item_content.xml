<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/selector_background_rcv_item_dir"
    android:focusable="true"
    android:clickable="true">

    <ImageView
        android:id="@+id/img_rcv_item_dir_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/content_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@drawable/ic_settings_black"/>

    <TextView
        android:id="@+id/txt_rcv_item_dir_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:singleLine="true"
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@drawable/selector_text_tint_dir_item"
        app:layout_constraintStart_toEndOf="@+id/img_rcv_item_dir_icon"
        app:layout_constraintEnd_toStartOf="@+id/img_rcv_item_dir_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Downloads"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_rcv_item_dir_more"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/content_description" />
</androidx.constraintlayout.widget.ConstraintLayout>