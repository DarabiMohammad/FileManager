<resources>

    <!-- Base application theme. -->

    <style name="AppMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="colorOnBackground">@color/colorDarkAccent</item>
    </style>

    <style name="SelectableBackground">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--  TextView Styles  -->

    <style name="ParentTextViewStyle">
        <item name="android:paddingStart">@dimen/material_normal_dimen</item>
        <item name="android:paddingEnd">@dimen/material_normal_dimen</item>
        <item name="android:paddingTop">@dimen/material_small_dimen</item>
        <item name="android:paddingBottom">@dimen/material_small_dimen</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NormalTextView" parent="ParentTextViewStyle">
        <item name="android:textSize">@dimen/material_text_size_normal</item>
        <item name="android:textColor">@color/colorDarkPrimaryDark</item>
    </style>

    <style name="MediumTextView" parent="ParentTextViewStyle">
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SelectableMediumTextView" parent="MediumTextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="LargeTextView" parent="ParentTextViewStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/material_text_size_medium</item>
    </style>

    <!--  Switch Styles  -->

    <style name="ParentSwitchStyle">
        <item name="android:paddingEnd">@dimen/material_normal_dimen</item>
    </style>

    <!--  RadioButton Styles  -->

    <style name="ParentRadioButton">
        <item name="android:paddingStart">@dimen/material_small_dimen</item>
        <item name="android:paddingEnd">@dimen/material_small_dimen</item>
    </style>

    <style name="NormalRadioButton" parent="ParentRadioButton">
        <item name="android:button">@null</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:drawablePadding">@dimen/material_small_dimen</item>
        <item name="android:drawableStart">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:textSize">@dimen/material_text_size_normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--  Button Styles  -->

    <style name="ParentButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NormalButton" parent="ParentButton">
        <item name="android:padding">@dimen/material_small_dimen</item>
        <item name="android:layout_marginEnd">@dimen/material_normal_dimen</item>
        <item name="android:layout_marginTop">@dimen/material_normal_dimen</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="RecyclerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="layoutManager">"androidx.recyclerview.widget.LinearLayoutManager"</item>
    </style>

</resources>